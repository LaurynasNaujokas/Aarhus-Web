@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}



		<!-- Banner -->
			<section id="banner">
				<h2>@Model.Value("pageTitle")</h2>
				<p>@Model.Value("bodyText")</p>
			</section>
			    
            <section>
                <h4>Articles</h4>
                @{
	var selection = Umbraco.Content(Guid.Parse("514aa1f1-e4e9-4da0-a679-f4d319c9a3a4"))
    .ChildrenOfType("articlesItem")
    .Where(x => x.IsVisible());
}
            <ul>
                @foreach (var item in selection)
                {
                    <hr />

                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><div class="articletitle"><a href="@item.Url">@item.Name</a></div></h5>
                                
                                <a class-"btn btn-primary" href="@item.Url">Read More..</a>
                            </div>
                        </div>
                    </div>
                }
            </ul>
            </section>

            <section>
                <h4>Projects</h4>
        
            </section>

	

	